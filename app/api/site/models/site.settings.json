{
  "connection": "default",
  "collectionName": "sites",
  "info": {
    "name": "site"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "url": {
      "type": "string"
    },
    "pages": {
      "collection": "page",
      "via": "site"
    },
    "lang": {
      "model": "languages"
    },
    "promotions": {
      "via": "site",
      "collection": "promotion"
    }
  }
}
